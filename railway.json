{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "bash start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "daxx-music-bot",
      "source": {
        "type": "repo"
      }
    },
    {
      "name": "mongodb",
      "source": {
        "type": "image",
        "image": "mongo:7"
      },
      "variables": {
        "MONGO_INITDB_ROOT_USERNAME": "admin",
        "MONGO_INITDB_ROOT_PASSWORD": "password123"
      }
    }
  ],
  "envVars": {
    "API_ID": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Get bot token from @BotFather",
      "required": true
    },
    "MONGO_DB_URI": {
      "description": "Will be automatically set by Railway MongoDB service",
      "default": "mongodb://admin:password123@mongodb:27017/daxxmusic?authSource=admin",
      "required": false
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID",
      "required": true
    },
    "STRING_SESSION": {
      "description": "Pyrogram string session",
      "required": true
    },
    "LOGGER_ID": {
      "description": "Telegram group/channel ID for logs",
      "required": true
    }
  }
}