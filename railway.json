{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "bash start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "envVars": {
    "API_ID": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Get bot token from @BotFather",
      "required": true
    },
    "MONGO_DB_URI": {
      "description": "MongoDB URI from cloud.mongodb.com",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID",
      "required": true
    },
    "STRING_SESSION": {
      "description": "Pyrogram string session",
      "required": true
    },
    "LOGGER_ID": {
      "description": "Telegram group/channel ID for logs",
      "required": true
    }
  }
}