# REQUIRED VARIABLES - Must be filled
# Get these from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (use @userinfobot to get it)
OWNER_ID=your_user_id_here

# MongoDB Database URI (get free from cloud.mongodb.com)
MONGO_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Pyrogram String Session (generate using generate_session.py)
STRING_SESSION=your_string_session_here

# Group/Channel ID for bot logs (must start with -)
LOGGER_ID=-1001234567890

# OPTIONAL VARIABLES - Can be customized
# Bot Settings
BOT_NAME=DAXX Music
BOT_USERNAME=DAXXMusicBot
OWNER_USERNAME=your_username
ASSUSERNAME=assistant_username

# Support Links (optional)
SUPPORT_CHANNEL=https://t.me/your_channel
SUPPORT_CHAT=https://t.me/your_group

# Music Settings
DURATION_LIMIT=300
SONG_DOWNLOAD_DURATION=180
AUTO_LEAVING_ASSISTANT=True
AUTO_LEAVE_ASSISTANT_TIME=5400

# Audio/Video Quality
TG_AUDIO_FILESIZE_LIMIT=104857600
TG_VIDEO_FILESIZE_LIMIT=1073741824

# Spotify Integration (optional but recommended)
# Get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Additional Assistant Sessions (optional)
# For multi-assistant support (up to 5)
STRING_SESSION2=
STRING_SESSION3=
STRING_SESSION4=
STRING_SESSION5=

# Images URLs (optional - defaults provided)
START_IMG_URL=https://te.legra.ph/file/your_image.jpg
PING_IMG_URL=https://te.legra.ph/file/your_image.jpg

# Advanced Settings (optional)
PLAYLIST_FETCH_LIMIT=25

# GitHub Settings (for updates)
UPSTREAM_REPO=https://github.com/yourusername/DAXXMUSIC
UPSTREAM_BRANCH=main
GIT_TOKEN=

# Heroku Settings (if using Heroku instead of Railway)
HEROKU_APP_NAME=
HEROKU_API_KEY=