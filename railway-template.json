{
  "name": "DAXX Music Bot with MongoDB",
  "description": "Professional Telegram Music Bot with Built-in MongoDB Database",
  "services": [
    {
      "name": "daxx-music-bot",
      "icon": "üéµ",
      "source": {
        "type": "github",
        "repo": "OGUN01/music_bot"
      },
      "deploy": {
        "startCommand": "bash start",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "envVars": {
        "API_ID": {
          "description": "Get from https://my.telegram.org",
          "required": true,
          "default": ""
        },
        "API_HASH": {
          "description": "Get from https://my.telegram.org",
          "required": true,
          "default": ""
        },
        "BOT_TOKEN": {
          "description": "Bot token from @BotFather",
          "required": true,
          "default": ""
        },
        "OWNER_ID": {
          "description": "Your Telegram user ID",
          "required": true,
          "default": ""
        },
        "STRING_SESSION": {
          "description": "Pyrogram session string (generate using script)",
          "required": true,
          "default": ""
        },
        "LOGGER_ID": {
          "description": "Telegram group ID for logs (starts with -)",
          "required": true,
          "default": ""
        },
        "MONGO_DB_URI": {
          "description": "Auto-configured by Railway MongoDB service",
          "required": false,
          "default": "mongodb://admin:password123@mongodb:27017/daxxmusic?authSource=admin"
        },
        "BOT_NAME": {
          "description": "Your bot's display name",
          "required": false,
          "default": "DAXX Music"
        },
        "SPOTIFY_CLIENT_ID": {
          "description": "Spotify client ID for integration (optional)",
          "required": false,
          "default": ""
        },
        "SPOTIFY_CLIENT_SECRET": {
          "description": "Spotify client secret (optional)",
          "required": false,
          "default": ""
        }
      }
    },
    {
      "name": "mongodb",
      "icon": "üçÉ",
      "source": {
        "type": "image",
        "image": "mongo:7"
      },
      "variables": {
        "MONGO_INITDB_ROOT_USERNAME": "admin",
        "MONGO_INITDB_ROOT_PASSWORD": "password123",
        "MONGO_INITDB_DATABASE": "daxxmusic"
      }
    }
  ]
}